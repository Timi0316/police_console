<!DOCTYPE html>
<html>
<head>
    <title>System Console</title>
    #parse('/layout/content_css.vm')
    <link href="#springUrl('/css/business/content.css')" rel="stylesheet"/>
</head>

<body role="document">
<!-- head-->
    #parse('/layout/head.vm')
<!-- left -->
    #parse('/layout/nav_left.vm')

<!--content -->
<div class="content">
    <div class="page-header">
        <h1>
            警务动态 > 添加
        </h1>
    </div>
    <form action="#springUrl('/dynamic/dynamic_add_submit.htm')" method="post" enctype="multipart/form-data">
        <div class="title">
            <div class="form-group">
                <label for="title">标题</label>

            </div>
            <div>
                <label>
                    $!{dynamic.title}
                </label>
            </div>
        </div>
        <div class="image">
            <div class="form-group">
                <div>
                   <img class="img-polaroid" src=#springUrl("/common/preview_image.htm?imageUrl=$!{dynamic.imageUrl}") />
                </div>
            </div>
        </div>
        <div class="content">
            <div class="form-group">
                <label for="content">内容</label>
            </div>
            <div>
                <label>$!{dynamic.content}</label>
            </div>
        </div>
        <div class="button">
            <button class="btn" type="button" onclick="history.back()">返回</button>
        </div>
    </form>
</div>

<!-- js -->
    #parse('/layout/content_js.vm')
<script src="#springUrl('/js/business/dynamic/dynamic.js')"></script>
<script src="#springUrl('/js/business/dynamic/base.js')"></script>
</body>
</html>
