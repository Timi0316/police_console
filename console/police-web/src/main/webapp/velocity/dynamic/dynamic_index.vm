<!DOCTYPE html>
<html>
<head>
    <title>System Console</title>
    #parse('/layout/content_css.vm')
</head>

<body role="document">
<!-- head-->
    #parse('/layout/head.vm')
<!-- left -->
    #parse('/layout/nav_left.vm')

<!--content -->
<div class="content">
    <div class="page-header">
        <h1>
            警务动态
        </h1>
    </div>
    <div>
        <label>起始时间 ： </label> <input type="text"/>
        <label>结束时间 ： </label> <input type="text"/>
        <button class="btn" type="button">查询</button>
        <button class="btn" type="button" onclick="addDynamic('#springUrl('/dynamic/add.htm')')">添加</button>
    </div>
    #if($!{size} == 0)
        暂无警务动态
    #else
        <table class="table  table-hover">
            <thead>
            <tr>
                <th>
                    序号
                </th>
                <th>
                    时间
                </th>
                <th>
                    标题
                </th>
                <th>
                    操作
                </th>
            </tr>
            </thead>
            <tbody>
                #foreach(${dynamic} in $!{dynamicList})
                <tr style="text-align: center;">
                   <td>
                        ${dynamic.id}
                   </td>
                    <td>
                        ${dynamic.date}
                    </td>
                    <td>
                        ${dynamic.title}
                    </td>
                    <td>
                        <button  class="btn" type="button" onclick="editDynamic('#springUrl('/dynamic/edit.htm')','${dynamic.id}')">编辑</button>
                        <button  class="btn" type="button" onclick="deleteDynamic('#springUrl('/dynamic/delete.htm')','${dynamic.id}')" >删除</button>
                        <button  class="btn" type="button" onclick="previewDynamic('#springUrl('/dynamic/preview.htm')','${dynamic.id}')" >预览</button>

                    </td>
                </tr>
                #end
            </tbody>
        </table>
        <div class="table-foot">
            <ul class="pagination">
                <li>
                    <a href="#">上一页</a>
                </li>
                #foreach(${num} in [1..$!{size}])
                    <li>
                        <a href="#">$!{num}</a>
                    </li>
                #end
                <li>
                    <a href="#">下一页</a>
                </li>
            </ul>
        </div>
    #end


</div>

<!-- js -->
    #parse('/layout/content_js.vm')
    <script src="#springUrl('/js/business/dynamic/dynamic.js')"></script>
</body>
</html>
